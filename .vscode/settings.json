{
  "editor.formatOnSave": true,
  "search.exclude": {
    "**/build": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "{**/*.map,**/*.txt,**/*.svg,}": true
  },
  "javascript.validate.enable": false,
  "flow.pathToFlow": "${workspaceRoot}/node_modules/.bin/flow",
  "flow.showUncovered": true
}
